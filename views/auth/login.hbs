<div id="login" class="container col-xxl-4 mt-5">
  <h2>Login</h2>
  <form action="/login" method="POST" class="row g-3 mt-2">
    <div class="mb-3">
      <label for="email" class="form-label"> Email address </label>
      <input
        value="{{user.email}}"
        type="text"
        class="form-control {{#if errors.email}}is-invalid{{/if}}"
        id="email"
        name="email"
        {{! placeholder="Your email" }}
        autocomplete="off"
        required
      />
      <div class="invalid-feedback">
        <p>{{errors.email}}</p>
      </div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label"> Password </label>
      <input
        type="password"
        class="form-control {{#if errors.password}}is-invalid{{/if}}"
        name="password"
        id="password"
        {{! placeholder="********" }}
        autocomplete="off"
        required
      />
      <div class="invalid-feedback">
        <p>{{errors.password}}</p>
      </div>
    </div>
    <div class="col-12">
      <button class="btn btn-primary" type="submit">Login</button>
    </div>

    {{! error message will be added here }}
    {{!-- {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}} --}}
  </form>
</div>